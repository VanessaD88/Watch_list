<section class="my-lists">
  <h1>My Watch Lists</h1>
  <% if @lists.any? %>
    <% @lists.each do |list| %>
          <h2><%= list.name %></h2>
          <% if list.description.present? %>
            <p><%= list.description %></p>
          <% end %>
        <% if list.bookmarks.any? %>
          <div>
            <% list.bookmarks.each do |bookmark| %>
              <% movie = bookmark.movie %>
                <% if movie.poster_url.present? %>
                  <div class="poster">
                    <%= image_tag movie.poster_url, alt: "#{movie.title} poster" %>
                  </div>
                <% end %>
                <div>
                  <h3><%= movie.title %></h3>
                  <% if bookmark.comment.present? %>
                    <p>Comment: <%= bookmark.comment %></p>
                  <% end %>
                </div>
             <%= link_to "Add a movie to this list", new_list_bookmark_path(list), class: "btn btn-success" %>
            <% end %>
          </div>
        <% else %>
          <p>This list has no movies yet.</p>

        <% end %>
    <% end %>
  <% else %>
    <p>You have not created any lists yet.</p>
  <% end %>
</section>
