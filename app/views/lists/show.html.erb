<div class = "container">
  <h2><%= @list.name%></h2>
  <p><%= @list.description%></p>
 <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-12 col-sm-6 col-md-4 mb-4">
        <%# This is the merged card component %>
        <div class="card-trip">
          <%= image_tag bookmark.movie.poster_url, class: "card-img-top" %>
          <div class="card-trip-infos">
            <div>
              <h2><%= bookmark.movie.title %></h2>
              <p><em>"<%= bookmark.comment %>"</em></p>
            </div>
            <h2 class="card-trip-pricing">‚≠ê <%= bookmark.movie.rating %></h2>
          </div>
          <div class="card-trip-overview">
             <p><%= bookmark.movie.overview %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add a movie to this list", new_list_bookmark_path(@list), class: "btn btn-success" %>
  <% if @list.user.id == current_user.id %>
            <div class="card-trip-actions">
              <%= link_to "Edit this list", edit_list_path(@list)%>
              <%= link_to "Delete this list", list_path(@list),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </div>
          <%end%>
  <%= link_to "Back to all lists", lists_path %>
</div>
