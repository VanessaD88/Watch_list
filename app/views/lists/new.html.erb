<div class="form-container">
  <% if @list.errors.any? %>
    <div class="alert">
      <ul>
        <% @list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1>Create a new list</h1>

  <%= form_with model:@list do |f|%>
    <div class="form-group">
      <%=f.label :name, "List Name"%>
      <%= f.text_field :name, placeholder: "e.g. Drama, Classics, Feel Good..." %>
    </div>
    <div class="form-group">
      <%=f.label :description%>
      <%= f.text_field :description, placeholder: "Add a short description" %>
    </div>
    <div class="form-actions">
      <%= f.submit "Create list", class: "btn btn-primary"  %>
    <%end%>

    <%= link_to "Back to all lists", lists_path, class: "btn btn-secondary" %>
    </div>
</div>
